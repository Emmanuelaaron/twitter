<% @tweeets.each do |tweeet| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://media.gettyimages.com/photos/white-vans-and-buses-jockey-for-position-at-a-depot-in-kampala-uganda-picture-id654819032?s=612x612">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Emmanuel Isabirye</strong>
          <small>@obusogaburaile</small><br>
          <p><%= tweeet.tweeet %></p>
        </div>

        <nav class="level">
          <div class="level-left is mobile">
            <%= link_to tweeet, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </nav>

    </article>
